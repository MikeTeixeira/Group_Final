<!-- Order history of all client's purchases -->

<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Client Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Business Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.pickup_business_name %></td>
        <td><%= order.pickup_address %></td>
        <td><%= order.pickup_phone_number %></td>
        <td><%= order.dropoff_name %></td>
        <td><%= order.dropoff_address %></td>
        <td><%= order.dropoff_phone_number %></td>
        <td><%= order.dropoff_business_name %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
